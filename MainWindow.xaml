<Window x:Class="konyvtar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyvtar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		
		<TextBlock Text="Név:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
		<TextBox x:Name="txt_nev" Grid.Row="0" Grid.Column="1" Width="200"
                 TextChanged="txt_nev_TextChanged"/>

		
		<TextBlock Text="Életkor:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
		<TextBox x:Name="txt_eletkor" Grid.Row="1" Grid.Column="1" Width="100"
                 TextChanged="txt_eletkor_TextChanged"/>

		
		<TextBlock Text="Kedvenc műfaj:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
		<ComboBox x:Name="cbox_mufaj" Grid.Row="2" Grid.Column="1" Width="150"
                  SelectionChanged="cbox_mufaj_SelectionChanged">
			<ComboBoxItem>Regény</ComboBoxItem>
			<ComboBoxItem>Sci-fi</ComboBoxItem>
			<ComboBoxItem>Fantasy</ComboBoxItem>
			<ComboBoxItem>Ismeretterjesztő</ComboBoxItem>
			<ComboBoxItem>Mese</ComboBoxItem>
		</ComboBox>

		
		<TextBlock Text="Értesítések:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
		<StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
			<CheckBox x:Name="cb_hirlevel" Content="Hírlevél"
                      Checked="Ertesites_Checked" Unchecked="Ertesites_Checked"/>
			<CheckBox x:Name="cb_sms" Content="SMS" Margin="20,0,0,0"
                      Checked="Ertesites_Checked" Unchecked="Ertesites_Checked"/>
		</StackPanel>

		
		<TextBlock Text="Tagság:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
		<StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
			<RadioButton x:Name="rb_norm" Content="Normál" Checked="rb_norm_Checked"/>
			<RadioButton x:Name="rb_diak" Content="Diák" Margin="20,0,0,0" Checked="rb_diak_Checked"/>
			<RadioButton x:Name="rb_nyugdij" Content="Nyugdíjas" Margin="20,0,0,0" Checked="rb_nyugdij_Checked"/>
		</StackPanel>

		<Button x:Name="btn_mentes" Content="Mentés" Grid.Row="5" Grid.Column="0" Width="100"
                Click="btn_mentes_Click"/>
		<TextBlock x:Name="tbl_status" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>

		
		<TextBlock Text="Regisztrált olvasók:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top"/>
		<ListBox x:Name="lbox_olvasok" Grid.Row="6" Grid.Column="1" Width="200" Height="120"/>
	</Grid>
</Window>
