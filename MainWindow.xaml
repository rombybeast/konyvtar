<Window x:Class="konyvtar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyvtar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid Margin="20">

		
		<TextBlock Text="Név:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
		<TextBox x:Name="txt_nev" Margin="100,9,0,0" Width="200" VerticalAlignment="Top" HorizontalAlignment="Left"
                 TextChanged="txt_nev_TextChanged"/>

		
		<TextBlock Text="Életkor:" Margin="11,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
		<TextBox x:Name="txt_eletkor" Margin="100,50,0,0" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left"
                 TextChanged="txt_eletkor_TextChanged"/>

		
		<TextBlock Text="Kedvenc műfaj:" Margin="10,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
		<ComboBox x:Name="cbox_mufaj" Margin="120,94,0,0" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"
                  SelectionChanged="cbox_mufaj_SelectionChanged">
			
			<ComboBoxItem>Regény</ComboBoxItem>
			<ComboBoxItem>Sci-fi</ComboBoxItem>
			<ComboBoxItem>Fantasy</ComboBoxItem>
			<ComboBoxItem>Ismeretterjesztő</ComboBoxItem>
			<ComboBoxItem>Mese</ComboBoxItem>
			
			
			
		</ComboBox>

		
		<TextBlock Text="Értesítések:" Margin="10,140,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
		<CheckBox x:Name="cb_hirlevel" Content="Hírlevél" Margin="120,140,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                  Checked="cb_ertesites_Checked" Unchecked="cb_ertesites_Unchecked"/>
		<CheckBox x:Name="cb_sms" Content="SMS" Margin="200,140,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                  Checked="cb_ertesites_Checked" Unchecked="cb_ertesites_Unchecked"/>

		
		<TextBlock Text="Tagság:" Margin="9,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
		<RadioButton x:Name="rb_norm" Content="Normál" Margin="120,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                     Checked="rb_norm_Checked"/>
		<RadioButton x:Name="rb_diak" Content="Diák" Margin="200,181,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                     Checked="rb_diak_Checked"/>
		<RadioButton x:Name="rb_nyugdij" Content="Nyugdíjas" Margin="285,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                     Checked="rb_nyugdij_Checked"/>

		
		<Button x:Name="btn_mentes" Content="Mentés" Margin="116,230,0,0" Width="100" Height="30"
                VerticalAlignment="Top" HorizontalAlignment="Left" Click="btn_mentes_Click"/>

		
		<TextBlock x:Name="tbl_status" Margin="240,230,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Width="200" Text=""/>

		<TextBlock Text="Regisztrált olvasók:" Margin="10,280,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
		<ListBox x:Name="lbox_olvasok" Margin="120,280,0,0" Width="200" Height="120"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>

	</Grid>
</Window>
